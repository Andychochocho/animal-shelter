<h2>Here are all the animals in this type:</h2>

@if (@Model["animals"].Count == 0)
{
  <p>No animals have been added yet!</p>
}
else
{
  <ol>
    @foreach (var animals in @Model["animals"])
    {
        @animals.GetName()
        <ul>
          <li>@animals.GetBreed()</li>
          <li>@animals.GetGender()</li>
        </ul>
    }
  </ol>
}
<p><a href="/animals/new">Add a new animal</a></p>
<p><a href="/">Return to Main Page</a></p>
